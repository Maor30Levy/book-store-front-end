<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Main</title>
    {{>links}}
    <link rel="stylesheet" href="/css/book-class.css">
    <link rel="stylesheet" href="/css/index.css">
</head>
<body class='none'>
    <div id="container">    
        {{>header}}      
        <div id="main-box">  
            {{>sidebar}}            
            <div id="search">
                <form id="search-form">
                    <input type="text" id="title" placeholder="Title">
                    <input type="text" id="author" placeholder="Author">
                    <input type="text" id="category" placeholder="Category">                       
                    <input type="text" id="fromPrice" placeholder="From:Price">
                    <input type="text" id="toPrice" placeholder="To:Price">                                               
                    <input type="text" id="isbn" placeholder="ISBN(13)"> 
                    <button id="search">Find Book</button>            
                </form>
                <div id="result-box" class="result-box"></div>
            </div>
        </div>
        
        {{>footer}}

</div>    
    
 {{>scripts}}
    <script type="module" src="js/main.js"></script>
</body>
</html>